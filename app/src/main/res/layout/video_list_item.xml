<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/video_card_view"
    style="@style/VideoAndReviewsCardViewStyle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorBackgroundVideoReviewItem">

    <TextView
        android:id="@+id/video_tv"
        style="@style/ReviewsTvStyle" />

        <ImageView
            android:id="@+id/youtube_image_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_play_button" />

    </LinearLayout>
</android.support.v7.widget.CardView>